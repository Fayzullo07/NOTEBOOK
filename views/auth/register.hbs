<h3 class="text-center mt-3">CREATE ACCOUNT</h3>

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show col-lg-8 offset-lg-2" role="alert">
    <strong>Error!</strong>
    {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}


<div class="col-lg-8 offset-lg-2">
    <form action="/auth/register" method="POST" class="shadow-lg rounded p-4 mt-4" novalidate>
        <div class="form-floating mb-3 mt-3">
            <input type="text" class="form-control" id="name" placeholder="Enter Your Name" name="name" required
                value="{{data.name}}" />
            <label for="name">Enter Your Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" placeholder="Enter Your Email" name="email" required
                value="{{data.email}}" />
            <label for="email" class="form-label">Enter Your Email</label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input type="password" class="form-control" id="password" placeholder="Enter Your Password" name="password"
                required value="{{data.password}}" />
            <label for="password" class="form-label">Enter Your Password</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="confirm" placeholder="Enter Your Password Again"
                name="confirm" required />
            <label for="confirm" class="form-label">Enter Your Password Again</label>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-success">SIGN IN</button>
        </div>
        <div class="d-flex align-items-center justify-content-center mt-4">
            <p class="mb-0 me-2 text-muted">I Have Account Login</p>
            <a href="/auth/login" class="btn btn-outline-primary btn-sm">LOGIN</a>
        </div>
    </form>
</div>