<h3 class="text-center mt-4">Edit Notebook {{notebook.title}}</h3>

{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Error!</strong>
  {{error}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<form action="/notebooks/edit" method="POST" class="shadow p-4 mt-4" enctype="multipart/form-data" novalidate>
  <div class="form-floating mb-3 mt-3">
    <input type="text" class="form-control" id="title" placeholder="Enter Notebooks Name" name="title" required
      value="{{notebook.title}}" />
    <label for="title">Notebooks Model</label>
  </div>
  <div class="form-floating mb-3">
    <input type="number" class="form-control" id="price" placeholder="Enter price" min="1" name="price" required
      value="{{notebook.price}}" />
    <label for="price" class="form-label">Price</label>
  </div>
  <div class="mb-3 mt-3">
    <input type="file" class="form-control  form-control-lg" placeholder="Enter Image" name="img" required />
  </div>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="descr" placeholder="Enter Description" name="descr" required
      value="{{notebook.descr}}" />
    <label for="descr" class="form-label">Description</label>
  </div>
  <div class="d-grid">
    <input type="hidden" name="id" value="{{notebook.id}}">
    <button type="submit" class="btn btn-success">Edit Notebook</button>
  </div>
</form>

<form action="/notebooks/remove" method="POST">
  <input type="hidden" name="id" value="{{notebook.id}}">
  <button class="btn btn-danger mt-4">Remove Notebook</button>
</form>