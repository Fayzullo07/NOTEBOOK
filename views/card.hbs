<h1 class="text-center">Basket</h1>

<div id="card">
  {{#if notebooks.length}}
  <div id="card_one">
    {{#each notebooks}}
    <div class="card rounded-3 mb-4 shadow">
      <div class="card-body p-4">
        <div class="row d-flex justify-content-between align-items-center">

          <div class="col-md-2 col-lg-2 col-xl-2">
            <img src="{{img}}" class="img-fluid rounded-3" alt="{{title}}">
          </div>

          <div class="col-md-3 col-lg-3 col-xl-3">
            <h1 class=" fw-normal mb-2">{{title}}</h1>
          </div>

          <div class="col-md-3 col-lg-3 col-xl-2 d-flex justify-content-center">
            <button class="btn btn-link px-2">
              <i class="fas fa-minus js_minus" data-id="{{id}}"></i>
            </button>

            <div>{{count}}</div>

            <button class="btn btn-link px-2">
              <i class="fas fa-plus js_plus" data-id="{{id}}"></i>
            </button>
          </div>

          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
            <h4 class="mb-0">${{price}}</h4>
          </div>

          <div class="col-md-1 col-lg-1 col-xl-1 text-end">
            <p class="text-danger"><i class="fas fa-trash fa-lg js_remove" data-id="{{id}}"></i></p>
          </div>

        </div>
      </div>
    </div>

    {{/each}}
  </div>

  <a href="/notebooks" class="btn btn-outline-success">CONTINUE BUY</a>

  <div class="d-flex justify-content-between align-items-center card-footer border-0 px-4 py-5 my-2"
    style="background-color: #0a029a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
    <form action="/orders" method="POST">
      <button type="submit" class="btn btn-outline-info">ORDER</button>
    </form>
    <h3 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total:
      <span id="price" class="h2 mb-0 ms-2">${{price}}</span>
    </h3>
  </div>

  {{else}}

  <div class="row">
    <div class="col-md-12">
      <div class="card shadow mt-4">
        <div class="card-body">
          <div class="col-sm-12 text-center">
            <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 m-3" />
            <h3><strong>Your Cart is Empty</strong></h3>
            <h4>Add something to make me happy ðŸ˜­</h4>
            <a href="/notebooks" class="btn btn-outline-primary m-3">CONTINUE SHOPPING</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{/if}}
</div>